
public class Casting {

	public static void main(String[] args) {
		double a = 1.1;
		double b = 1;
		double b2 = (double) 1; // b와 같은 값을 강제적으로
		System.out.println(b); // 정수지만 double로 converting
		
		//int c = 1.1; 불가능 > converting하면 0.1을 잃는 경우가 존재
		int d = (int) 1.1; // 강제 정수화
		System.out.println(d); // 0.1 손실이 생김
		
		// 1 to String
		String e = Integer.toString(1);
		System.out.println(e);
		System.out.println(e.getClass());

	}

}
